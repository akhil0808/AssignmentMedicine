<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="prescriptionviewmodel"
            type="com.delight.assignment.modules.prescriptionmodule.PrescriptionViewModel" />
    </data>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.prescriptionmodule.PrescriptionFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pres_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/pres_save_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="5dp"
        />

    <Button
        android:id="@+id/pres_save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Save"
        android:textSize="14sp"
        android:layout_margin="5dp"
        android:fontFamily="@font/opensans_regular"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>